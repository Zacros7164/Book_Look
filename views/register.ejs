<%include header%>
<body>
  <%include navbar%>
  <%loggedIn = false%>
    <div class="container">
      <div class="row d-flex justify-content-center">
        <div class="col-10">
          <div class="content-wrapper m-3 p-5">
            <h1>Register</h1>
            <h2 class="text-danger"><%=msg%></h2>
            <form action="/registerProcess" method="post">
              <div class="form-group">
                <label class="mt-3" for="text">User Name:</label>
                <input type="text" class="form-control" name="userName" placeholder="username (optional)">
                <label class="mt-3" for="email">Email Address:</label>
                <input data-cy="email" type="email" class="form-control" name="email" placeholder="Email">
                <label class="mt-3" for="password">Password:</label>
                <input data-cy="password" type="password" class="form-control" name="password" placeholder="Password">
                <button class="pageBtn mt-3">Register!</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
</body>
  <%include footer%>